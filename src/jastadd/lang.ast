/**
        ENTRYPOINT
**/
Program  ::=  Clause *; 

/**
        A Horn Clause Consists of a Head:Literal, and a Body (Literal*).
**/
Clause ::= heads:Literal* body:Literal*;
Literal ::= predicate:PredicateSymbol terms:Term*;
PredicateSymbol ::= <ID>;

abstract Term;
Variable:Term ::= <ID>;
Constant:Term ::= <NUMERAL>;
