/**
        ENTRYPOINT
**/
Program  ::= Stmt*; 

abstract Stmt;

/**
        A Horn Clause Consists of a Head:Literal, and a Body (Literal*).
**/
Clause:Stmt ::= heads:Literal* body:Literal*;

ExtensionalDB:Stmt ::= predRef:PredicateSymbol <STRING>;

Literal ::= predicate:PredicateSymbol terms:Term*;
PredicateSymbol ::= <ID>;

abstract Term;
Variable:Term ::= <ID>;

abstract Constant:Term;

StringConstant:Term ::= <STRING>;
IntConstant:Term ::= <NUMERAL>;
